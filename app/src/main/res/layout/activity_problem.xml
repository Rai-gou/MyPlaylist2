<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/noInternet"
        android:layout_width="@dimen/wifi_layout"
        android:layout_height="@dimen/wifi_layout"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/wifi_layout"
        android:layout_marginTop="@dimen/wifi_top"
        android:layout_marginEnd="@dimen/wifi_layout"
        android:clipToOutline="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/problemRight"
            style="@style/problemRight"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/drawable_padding"
            android:layout_marginTop="@dimen/problem_right" />

        <ImageView
            android:id="@+id/problemLeft"
            style="@style/problemLeft"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/problem_start"
            android:layout_marginTop="@dimen/problem_left" />

        <ImageView
            android:id="@+id/wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/wifi_start"
            android:layout_marginTop="@dimen/wifi_problem"
            app:srcCompat="@drawable/wifi" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textProblem"
        style="@style/textProblem"
        android:layout_marginStart="@dimen/layout_width_button"
        android:layout_marginTop="@dimen/problem_right"
        android:layout_marginEnd="@dimen/layout_width_button"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noInternet" />

    <Button
        android:id="@+id/buttonProblem"
        style="@style/ButtonProblem"
        android:layout_marginStart="@dimen/wifi_left"
        android:layout_marginTop="@dimen/layout_width_button"
        android:layout_marginEnd="@dimen/wifi_right"
        android:text="@string/update"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textProblem" />
</androidx.constraintlayout.widget.ConstraintLayout>