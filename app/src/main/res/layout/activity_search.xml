<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity">

    <ImageButton
        android:id="@+id/imageButtonSearch"
        style="@style/ImageButtonBlackArrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />
    <TextView
        android:id="@+id/textView"
        style="@style/MessageTextStyleSetting"
        android:text="@string/search"
        tools:ignore="MissingConstraints,RtlSymmetry"  />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_frame"
        android:layout_marginTop="@dimen/width_text"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="@dimen/layout_zero">


        <EditText
            android:id="@+id/inputEditText"
            style="@style/EditText" />

        <ImageView
            android:id="@+id/clearIcon"
            style="@style/clear"
            app:layout_constraintBottom_toBottomOf="@+id/inputEditText"
            app:layout_constraintEnd_toEndOf="@+id/inputEditText"
            app:layout_constraintTop_toTopOf="@+id/inputEditText"
            tools:ignore="MissingConstraints" />
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>