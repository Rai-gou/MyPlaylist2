<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/searchProblem"
        android:layout_width="@dimen/wifi_layout"
        android:layout_height="@dimen/wifi_layout"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/wifi_layout"
        android:layout_marginTop="@dimen/wifi_top"
        android:layout_marginEnd="@dimen/wifi_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/noteLeft"
            style="@style/problemRight"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/drawable_padding"
            android:layout_marginTop="@dimen/problem_right" />

        <ImageView
            android:id="@+id/noteRight"
            style="@style/problemLeft"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/margin_top_view"
            android:layout_marginTop="@dimen/problem_left" />

        <ImageView
            android:id="@+id/nothingSmile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/wifi_start"
            android:layout_marginTop="@dimen/wifi_problem"
            app:srcCompat="@drawable/smile" />

    </RelativeLayout>

    <TextView
        android:id="@+id/nothing"
        style="@style/textNothing"
        android:layout_marginStart="@dimen/layout_width_button"
        android:layout_marginTop="@dimen/padding_start"
        android:layout_marginEnd="@dimen/layout_width_button"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchProblem" />
</androidx.constraintlayout.widget.ConstraintLayout>