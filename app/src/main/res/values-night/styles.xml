<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MessageTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="MessageTextStyleSetting">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">28dp</item>
    </style>
    <style name="MessageTextStyleBlack">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/black_blue</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="iconPadding">10dp</item>
        <item name="android:padding">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="cornerRadius">15sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <style name="BackGround">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">20dp</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="LinearButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>


    </style>
    <style name="BackGroundSettings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">0dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/black_blue</item>
    </style>
    <style name="ImageButton">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="ImageButtonBlackArrow">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:tint">@color/white</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>
    <style name="switchTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">310dp</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:layout_marginEnd">18dp</item>
        <item name="android:thumbTint">@color/gray</item>
        <item name="android:trackTint">@color/gray</item>
    </style>
    <style name="EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:drawablePadding">9dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:focusable">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">55</item>
    </style>
    <style name="imageEyes">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>